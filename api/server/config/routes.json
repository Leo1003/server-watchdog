{
    "routes": [
        {
            "method": "GET",
            "path": "/servers",
            "handler": "Server.find",
            "config": {
                "policies": []
            }
        },
        {
            "method": "GET",
            "path": "/servers/:_id",
            "handler": "Server.findOne",
            "config": {
                "policies": []
            }
        },
        {
            "method": "POST",
            "path": "/servers",
            "handler": "Server.create",
            "config": {
                "policies": [
                    "plugins.users-permissions.isAuthenticated"
                ]
            }
        },
        {
            "method": "PUT",
            "path": "/servers/:_id",
            "handler": "Server.update",
            "config": {
                "policies": [
                    "plugins.users-permissions.isAuthenticated"
                ]
            }
        },
        {
            "method": "DELETE",
            "path": "/servers/:_id",
            "handler": "Server.delete",
            "config": {
                "policies": [
                    "plugins.users-permissions.isAuthenticated"
                ]
            }
        }
    ]
}
